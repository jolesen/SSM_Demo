@layout("/common/_container.html"){
<div class="row">
    <div class="col-sm-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>检测结果管理</h5>
            </div>
            <div class="ibox-content">
                <div class="row row-lg">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-3">
                                <#NameCon id="condition" name="名称" />
                            </div>
                            <div class="col-sm-3">
                                <#button name="搜索" icon="fa-search" clickFun="Detection.search()"/>
                            </div>
                        </div>
                        <div class="hidden-xs" id="DetectionTableToolbar" role="group">
                            @if(shiro.hasPermission("/detection/add")){
                                <#button name="添加" icon="fa-plus" clickFun="Detection.openAddDetection()"/>
                            @}
                            @if(shiro.hasPermission("/detection/update")){
                                <#button name="修改" icon="fa-plus" clickFun="Detection.openDetectionDetail()" space="true"/>
                            @}
                            @if(shiro.hasPermission("/detection/delete")){
                                <#button name="删除" icon="fa-plus" clickFun="Detection.delete()" space="true"/>
                            @}
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            @if(shiro.hasPermission("/detection/importExcel")){
                                <#button name="Excel导入" icon="fa-plus" clickFun="Detection.uploadFile()" space="true"/>
                            @}
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            @if(shiro.hasPermission("/detection/ExportExcel")){
                                <#button name="Excel下载" icon="fa-download" clickFun="Detection.exportExcel()" space="true"/>
                            @}
                        </div>
                        <#table id="DetectionTable"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="${ctxPath}/static/modular/business/detection/detection.js"></script>
@}
