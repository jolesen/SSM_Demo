package com.stylefeng.guns.modular.system.dao;

import org.apache.ibatis.annotations.Param;

import java.util.List;
import java.util.Map;

/**
 * 通知dao
 *
 * @author zmj
 * @since 2017年8月24日上午10:21:40
 */
public interface NoticeDao {

	/**
	 * 
	 * 显示所有通知
	 * 
	 */
    List<Map<String, Object>> list(@Param("condition") String condition);
    
    /**
     * 将通知信息添加到用户-通知关系表
     */
    int insertRelation(@Param("noticeId") int noticeId,@Param("userId") int userId);
    
    /**
     * 根据用户Id返回通知
     * @param userId 用户Id
     * @param all 是否显示所有通知（包括已阅）null:显示
     */
    List<Map<String, Object>> listByUserId(@Param("userId") int userId,@Param("all") String all);
    
    /**
     * 更新通知状态
     * @param userId 用户Id
     * @param noticeId 通知Id
     * @param readed 状态
     * @return
     */
    int updateRead(@Param("userId") int userId,@Param("noticeId") int noticeId,@Param("readed") int readed);
}
