<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stylefeng.guns.modular.business.dao.SampleUsedDao">



 <!-- List<Map<String, Object>> selectSampleUsedByCondition( @Param("condition") String condition);  -->
<select id="listSampleUsedByCondition" resultType="map" parameterType = "string">
SELECT s.sample_id,s.detection_item,s.lab_code,s.sample_number,s.subject_name,s.extracted
FROM t_sample s
LEFT JOIN t_sample_extracted_dna sed ON s.sample_id = sed.sample_id 
LEFT JOIN t_sample_extracted_rna ser ON s.sample_id = ser.sample_id 
WHERE s.extracted = '否' OR (s.extracted = '是' AND sed.is_complete = 1)  OR (s.extracted = '是' AND ser.is_complete = 1) 
</select>
<!--  List<Map<String,Object>> listHadSampleUsed(); -->
<select id="listHadSampleUsed" resultType="map">
    select tsu.*,ts.detection_item,ts.lab_code,ts.sample_number,ts.subject_name 
    from t_sample_used tsu 
    left join t_sample ts 
    on tsu.sample_id = ts.sample_id
</select>
<!-- List<Map<String, Object>> listHadSampleUsedById(Integer sampleId); -->
<select id="listHadSampleUsedById" resultType="map">
    select tsu.*,ts.detection_item,ts.lab_code,ts.sample_number,ts.subject_name 
    from t_sample_used tsu 
    left join t_sample ts 
    on tsu.sample_id = ts.sample_id 
    where tsu.sample_id = #{sample_id}
</select>

</mapper>